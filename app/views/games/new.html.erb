<h1> New game</h1>
<ul class="list-inline">
<% @letters.each do |letter|%>
  <li class="list-inline-item badge bg-primary p-3 fs-3"><%= letter%></li>
<% end %>
</ul>

<form action="/score" method="post" data-turbo="false" >
  <label for="word" class="form-label">What is the longest word you can find?</label>
  <div class="input-group">
   <input type="text" name="word" class="form-control">
  <input type="submit" value="play" class="btn btn-outline-secondary"></div>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

</form>
